{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "baseUrl": "./packages",
      "lib": [
        "es6"
      ],
      "paths": {
        "@squzy/core": ["core/lib"],
        "@squzy/express": ["core/express"],
        "@squzy/angular": ["core/angular"],
        "@squzy/vanilla": ["core/vanilla"]
      }
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
   }